@using ViewModel
@model UserViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body style="background-color:azure">

    <!-- Header -->
    <header>
        <h1 style="text-align:center; color:black">Leave Management System</h1>
        <ul>
            <li><a href="~/Home/Contact">Contact</a></li>
            <li style="float:right"><a class="active" href="~/Home/About">About</a></li>
        </ul>
    </header>
    <!-- End of Header -->
    <!-- Left Sidebar -->
    <nav>
        <ul style="background-color:lightgray">
            <li>@Html.ActionLink("Log In", "LogIn", "Login")</li>           
        </ul>
    </nav>
    <!-- End of Left Sidebar -->
    <!-- Content Body -->
    <div class="content">
        @RenderBody()
    </div>
    <!-- End of Content Body -->
    <!-- Footer -->
    <footer>
        <h4>Copy Right © RSAPP.</h4>
    </footer>

    <!-- Style -->
    <style>
        header {
            height: 110px;
            width: 100%;
            background-color: lightgray;
        }

        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: lightgray;
        }

        li {
            float: right;
        }

            li a {
                display: block;
                color: black;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                background-color: lightgray;
                font-size:larger;
            }

                /* Change the link color to #111 (black) on hover */
                li a:hover {
                    background-color: dodgerblue;
                }

        nav {
            float: left;
            width: 200px;
            height: 400px;
            background-color: lightgray;
        }

        .content {
            background-color: aliceblue;
            padding: 20px;
        }

        footer {
            background-color: lightgray;
            width: 100%;
            height: 50px;
            float: right;
            text-align: center;
        }
    </style>
</body>
</html>
